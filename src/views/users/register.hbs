    <h1>Register</h1>
      <form action="/users/register" method="post">
        <div class="form-group">
          <label for="email">Name:</label>
          <input name="name" type="text" class="form-control" value="{{name}}" required>
        </div>
        <div class="form-group">
          <label for="email">Email:</label>
          <input name="email" type="email" class="form-control" value="{{email}}" required>
        </div>
        <div class="form-group">
          <label for="password">Password:</label>
          <input name="password" type="password" class="form-control" name="{{password}}" required>
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password:</label>
          <input name="password2" type="password" class="form-control" name="{{password2}}" required>
        </div>
                <button type="submit" class="btn btn-primary">Register</button>
      </form>
       <a href="/users/login">Have an account? click here &hearts;</a>
